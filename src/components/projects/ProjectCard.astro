---
import type { Project } from '../../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class="project" style={`--accent: ${project.accentColor}`} data-project-id={project.id}>
  <div class="project-number-container">
    <span class="project-number">{project.number}</span>
  </div>
  <div class="project-info">
    <div class="project-header">
      <span class="project-category">{project.category}</span>
      <h3>{project.title}</h3>
    </div>
    <p class="project-description">{project.description.substring(0, 120)}...</p>
    <div class="project-tech">
      {project.technologies.slice(0, 5).map((tech) => (
        <span class="tech-pill">{tech}</span>
      ))}
      {project.technologies.length > 5 && (
        <span class="tech-more">+{project.technologies.length - 5}</span>
      )}
    </div>
  </div>
  <div class="project-actions">
    <button class="action-btn primary view-btn" data-project-id={project.id}>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
        <circle cx="12" cy="12" r="3"></circle>
      </svg>
      <span>View Project</span>
    </button>
    {project.githubUrl ? (
      <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="action-btn secondary github-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span>Source</span>
      </a>
    ) : (
      <span class="action-btn disabled private-btn" title="Private repository">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
        <span>Private</span>
      </span>
    )}
  </div>
</article>

<style>
  .project {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 2.5rem;
    align-items: center;
    padding: 2rem 2rem;
    margin: 0 -2rem;
    border-radius: 20px;
    position: relative;
    transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
    background: transparent;
    cursor: pointer;
  }

  .project:hover {
    background: color-mix(in srgb, var(--accent) 6%, white);
    box-shadow: 0 8px 40px color-mix(in srgb, var(--accent) 15%, transparent);
    transform: translateY(-4px);
  }

  .project::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 2rem;
    right: 2rem;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0,0,0,0.08), transparent);
  }

  .project:last-child::after {
    display: none;
  }

  .project-number-container {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: color-mix(in srgb, var(--accent) 12%, transparent);
    border-radius: 16px;
    transition: all 0.35s ease;
  }

  .project:hover .project-number-container {
    background: var(--accent);
    box-shadow: 0 4px 16px color-mix(in srgb, var(--accent) 40%, transparent);
  }

  .project-number {
    font-size: 1rem;
    font-weight: 800;
    color: var(--accent);
    transition: color 0.35s ease;
  }

  .project:hover .project-number {
    color: white;
  }

  .project-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .project-header {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .project-category {
    display: inline-flex;
    align-self: flex-start;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 12%, transparent);
    padding: 0.35rem 0.85rem;
    border-radius: 100px;
    transition: all 0.3s ease;
  }

  .project:hover .project-category {
    background: var(--accent);
    color: white;
  }

  .project-info h3 {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    color: #0a0a0a;
    transition: color 0.3s ease;
    line-height: 1.2;
  }

  .project:hover .project-info h3 {
    color: var(--accent);
  }

  .project-description {
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .project-tech {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.25rem;
  }

  .tech-pill {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    background-color: color-mix(in srgb, var(--accent) 10%, transparent);
    padding: 0.35rem 0.75rem;
    border-radius: 100px;
    transition: all 0.25s ease;
  }

  .tech-pill:hover {
    background-color: var(--accent);
    color: white;
  }

  .tech-more {
    font-size: 0.75rem;
    font-weight: 700;
    color: #999;
    background-color: rgba(0,0,0,0.05);
    padding: 0.35rem 0.75rem;
    border-radius: 100px;
  }

  .project-actions {
    display: flex;
    gap: 0.75rem;
    flex-direction: column;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    font-weight: 700;
    padding: 0.65rem 1.25rem;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    white-space: nowrap;
  }

  .action-btn span {
    transition: transform 0.2s ease;
  }

  .action-btn svg {
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .action-btn.primary {
    background: var(--accent);
    color: white;
    box-shadow: 0 4px 16px color-mix(in srgb, var(--accent) 35%, transparent);
  }

  .action-btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px color-mix(in srgb, var(--accent) 50%, transparent);
  }

  .action-btn.secondary {
    background: transparent;
    color: #0a0a0a;
    border: 2px solid rgba(26, 26, 26, 0.12);
  }

  .action-btn.secondary:hover {
    border-color: var(--accent);
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 5%, transparent);
  }

  .action-btn.disabled {
    background: rgba(0,0,0,0.04);
    color: #999;
    cursor: not-allowed;
    border: 2px solid transparent;
  }

  .action-btn.disabled:hover {
    transform: none;
    box-shadow: none;
  }

  @media (max-width: 968px) {
    .project {
      grid-template-columns: 1fr;
      gap: 1.25rem;
      padding: 1.75rem 1.5rem;
      margin: 0 -1.5rem;
      border-radius: 16px;
    }

    .project-number-container {
      width: 48px;
      height: 48px;
      border-radius: 12px;
    }

    .project-info h3 {
      font-size: 1.25rem;
    }

    .project-actions {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .action-btn {
      flex: 1;
      min-width: 120px;
    }
  }

  @media (max-width: 480px) {
    .project {
      padding: 1.5rem 1rem;
      margin: 0 -1rem;
    }

    .project-number-container {
      display: none;
    }

    .project-category {
      font-size: 0.65rem;
    }

    .project-info h3 {
      font-size: 1.15rem;
    }

    .project-description {
      font-size: 0.875rem;
    }

    .action-btn {
      font-size: 0.8rem;
      padding: 0.6rem 1rem;
    }
  }
</style>
</style>
