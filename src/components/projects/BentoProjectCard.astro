---
import type { Project } from '../../data/projects';

interface Props {
  project: Project;
  size?: 'tall' | 'wide' | 'default';
}

const { project, size = 'default' } = Astro.props;
const mainImage = project.images[0] || '/images/placeholder.png';

// Adjust content based on card size
const descLength = size === 'tall' ? 140 : size === 'wide' ? 100 : 70;
const techCount = size === 'tall' ? 4 : size === 'wide' ? 5 : 3;
---

<article
  class={`bento-card bento-${size}`}
  style={`--accent: ${project.accentColor}`}
  data-project-id={project.id}
>
  <div class="card-image">
    <img src={mainImage} alt={project.title} loading="lazy" />
    <div class="card-overlay"></div>
  </div>

  <div class="card-content">
    <div class="card-header">
      <span class="card-category">{project.category}</span>
      <div class="card-status">
        {project.viewUrl ? (
          <span class="status-live">
            <span class="pulse"></span>
            Live
          </span>
        ) : (
          <span class="status-private">Private</span>
        )}
      </div>
    </div>

    <div class="card-main">
      <h3>{project.title}</h3>
      <p class="card-description">
        {project.description.substring(0, descLength)}...
      </p>
    </div>

    <div class="card-footer">
      <div class="card-tech">
        {project.technologies.slice(0, techCount).map((tech) => (
          <span class="tech-tag">{tech}</span>
        ))}
        {project.technologies.length > techCount && (
          <span class="tech-more">+{project.technologies.length - techCount}</span>
        )}
      </div>
      <button class="view-btn" data-project-id={project.id}>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </button>
    </div>
  </div>

  <div class="card-number">{project.number}</div>
</article>

<style>
  .bento-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    background: #1a1a1a;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
  }

  .bento-card:hover {
    transform: translateY(-6px);
    box-shadow:
      0 20px 40px color-mix(in srgb, var(--accent) 20%, transparent),
      0 8px 20px rgba(0, 0, 0, 0.12);
  }

  /* Image */
  .card-image {
    position: absolute;
    inset: 0;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .bento-card:hover .card-image img {
    transform: scale(1.06);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.2) 100%
    );
    transition: background 0.4s ease;
  }

  .bento-card:hover .card-overlay {
    background: linear-gradient(
      to top,
      color-mix(in srgb, var(--accent) 85%, black) 0%,
      color-mix(in srgb, var(--accent) 40%, transparent) 50%,
      transparent 100%
    );
  }

  /* Content */
  .card-content {
    position: relative;
    z-index: 1;
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    color: white;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .card-category {
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--accent);
    background: rgba(255, 255, 255, 0.95);
    padding: 0.3rem 0.6rem;
    border-radius: 100px;
    transition: all 0.3s ease;
  }

  .bento-card:hover .card-category {
    background: var(--accent);
    color: white;
  }

  .status-live {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.55rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #10B981;
    background: rgba(255, 255, 255, 0.95);
    padding: 0.3rem 0.5rem;
    border-radius: 100px;
  }

  .pulse {
    width: 5px;
    height: 5px;
    background: #10B981;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.3); }
  }

  .status-private {
    font-size: 0.55rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #888;
    background: rgba(255, 255, 255, 0.9);
    padding: 0.3rem 0.5rem;
    border-radius: 100px;
  }

  /* Main */
  .card-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .card-main h3 {
    font-size: 1.25rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: 0.35rem;
    line-height: 1.2;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  }

  .card-description {
    font-size: 0.8rem;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  /* Footer */
  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid rgba(255, 255, 255, 0.12);
  }

  .card-tech {
    display: flex;
    gap: 0.3rem;
    flex-wrap: wrap;
    flex: 1;
  }

  .tech-tag {
    font-size: 0.55rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    color: white;
    background: rgba(255, 255, 255, 0.15);
    padding: 0.2rem 0.45rem;
    border-radius: 4px;
    transition: background 0.2s ease;
  }

  .tech-tag:hover {
    background: var(--accent);
  }

  .tech-more {
    font-size: 0.55rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.6);
    padding: 0.2rem 0.45rem;
  }

  .view-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--accent);
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    flex-shrink: 0;
    box-shadow: 0 4px 12px color-mix(in srgb, var(--accent) 40%, transparent);
  }

  .view-btn:hover {
    transform: scale(1.1) rotate(-45deg);
  }

  /* Number watermark */
  .card-number {
    position: absolute;
    top: 0.75rem;
    right: 1rem;
    font-size: 3rem;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.05);
    line-height: 1;
    pointer-events: none;
    transition: all 0.4s ease;
  }

  .bento-card:hover .card-number {
    color: rgba(255, 255, 255, 0.1);
    transform: scale(1.05);
  }

  /* ==================== */
  /* SIZE VARIANTS        */
  /* ==================== */

  /* Tall card - more vertical space */
  .bento-tall .card-content {
    padding: 1.5rem;
  }

  .bento-tall .card-main h3 {
    font-size: 1.5rem;
  }

  .bento-tall .card-description {
    font-size: 0.85rem;
  }

  .bento-tall .card-number {
    font-size: 4rem;
  }

  .bento-tall .tech-tag {
    font-size: 0.6rem;
    padding: 0.25rem 0.5rem;
  }

  .bento-tall .view-btn {
    width: 40px;
    height: 40px;
  }

  /* Wide card - horizontal layout */
  .bento-wide .card-content {
    flex-direction: row;
    align-items: flex-end;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  .bento-wide .card-header {
    position: absolute;
    top: 1.25rem;
    left: 1.5rem;
    right: 1.5rem;
  }

  .bento-wide .card-main {
    flex: 1;
  }

  .bento-wide .card-main h3 {
    font-size: 1.5rem;
  }

  .bento-wide .card-footer {
    flex-direction: column;
    align-items: flex-end;
    border-top: none;
    padding-top: 0;
    margin-top: 0;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .bento-wide .card-tech {
    justify-content: flex-end;
  }

  .bento-wide .card-number {
    font-size: 4rem;
    top: auto;
    bottom: 0.75rem;
  }

  /* ==================== */
  /* RESPONSIVE           */
  /* ==================== */

  @media (max-width: 968px) {
    .bento-wide .card-content {
      flex-direction: column;
      align-items: stretch;
    }

    .bento-wide .card-header {
      position: relative;
      top: auto;
      left: auto;
      right: auto;
    }

    .bento-wide .card-footer {
      flex-direction: row;
      align-items: center;
      border-top: 1px solid rgba(255, 255, 255, 0.12);
      padding-top: 0.75rem;
      margin-top: 0.75rem;
    }

    .bento-wide .card-tech {
      justify-content: flex-start;
    }

    .bento-wide .card-number {
      top: 0.75rem;
      bottom: auto;
    }
  }

  @media (max-width: 640px) {
    .bento-card {
      border-radius: 16px;
    }

    .card-content {
      padding: 1rem;
    }

    .card-main h3,
    .bento-tall .card-main h3,
    .bento-wide .card-main h3 {
      font-size: 1.2rem;
    }

    .card-description {
      font-size: 0.75rem;
    }

    .card-number,
    .bento-tall .card-number,
    .bento-wide .card-number {
      font-size: 2.5rem;
    }

    .view-btn,
    .bento-tall .view-btn {
      width: 34px;
      height: 34px;
    }

    .view-btn svg {
      width: 16px;
      height: 16px;
    }
  }
</style>
